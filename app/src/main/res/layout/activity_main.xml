<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="@drawable/main_back_new2"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/toolBar"
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/roundcorner"
        android:gravity="start">


        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.09"
            app:srcCompat="@drawable/final_kotha_ko" />

        <TextView
            android:id="@+id/text_app_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="50sp"
            android:layout_marginEnd="50sp"
            android:layout_weight="1"
            android:fontFamily="@font/spartan_bold"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#87CEEB"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/create_group"
            android:layout_width="36sp"
            android:layout_height="36sp"
            android:layout_gravity="center"
            android:layout_marginEnd="10sp"
            android:background="@drawable/create_group"
            android:contentDescription="@string/create_new_group"/>

        <ImageView
            android:id="@+id/logout_button"
            android:layout_width="36sp"
            android:layout_height="36sp"
            android:layout_gravity="center"
            android:layout_marginEnd="10sp"
            android:background="@drawable/logout_blue"
            android:contentDescription="@string/logout_button" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/layout_main_userRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolBar"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="150dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <ImageView
        android:id="@+id/camera"
        android:layout_width="36dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="230sp"
        android:layout_marginBottom="10sp"
        android:contentDescription="@string/camera"
        android:src="@drawable/cam" />

    <ImageView
        android:id="@+id/chat"
        android:layout_width="39dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="165sp"
        android:layout_marginBottom="10sp"
        android:contentDescription="@string/chat"
        android:src="@drawable/chat1" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="42dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="100sp"
        android:layout_marginBottom="10sp"
        android:contentDescription="@string/settings"
        android:src="@drawable/setting1" />

